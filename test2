    # ---- Fast deterministic shortcuts (avoid LLM for obvious menu clicks) ----
    if ("assign" in text and "pcp" in text) or text in ("1", "option 1"):
        return "assign_pcp"
    if ("specialist" in text) or text in ("2", "option 2"):
        return "specialist"
    if ("npi" in text) or ("provider npi" in text) or ("search provider npi" in text) or text in ("3", "option 3"):
        return "npi"
